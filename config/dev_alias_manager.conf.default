# Dev Alias Manager Default Configuration
# 设备别名管理器默认配置

# Number of retries for device operations
# 设备操作的重试次数
MAX_RETRIES=5

# Timeout for device operations (in seconds)
# 设备操作的超时时间（秒）
TIMEOUT=10

# Device record file location
# 设备记录文件位置
DEVICE_RECORD_FILE="/etc/udev/rules.d/99-usb.rules"

# Log level (DEBUG, INFO, WARNING, ERROR)
# 日志级别（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# Enable or disable automatic device naming (true/false)
# 启用或禁用自动设备命名（true/false）
AUTO_NAMING=false

# Prefix for automatically generated device names
# 自动生成的设备名称前缀
AUTO_NAME_PREFIX="usb-dev-"

# Language setting (en, zh, ja)
# Leave empty to use system default
# 语言设置（en, zh, ja）
# 留空以使用系统默认语言
LANGUAGE=

# Backup directory for udev rules
# udev 规则的备份目录
BACKUP_DIR="/var/backups/dev_alias_manager"

# Maximum number of backups to keep
# 保留的最大备份数量
MAX_BACKUPS=5

# Enable or disable detailed logging (true/false)
# 启用或禁用详细日志记录（true/false）
DETAILED_LOGGING=false

# User-defined device types (comma-separated list)
# Example: DEVICE_TYPES="scanner,printer,modem"
# 用户定义的设备类型（逗号分隔的列表）
# 示例：DEVICE_TYPES="扫描仪,打印机,调制解调器"
DEVICE_TYPES=

# Custom udev rule template
# Use {idVendor}, {idProduct}, and {alias} as placeholders
# 自定义 udev 规则模板
# 使用 {idVendor}、{idProduct} 和 {alias} 作为占位符
UDEV_RULE_TEMPLATE="SUBSYSTEM==\"tty\", ATTRS{idVendor}==\"{idVendor}\", ATTRS{idProduct}==\"{idProduct}\", SYMLINK+=\"{alias}\""

# Enable or disable automatic updates check (true/false)
# 启用或禁用自动更新检查（true/false）
CHECK_UPDATES=true

# Update check URL
# 更新检查 URL
UPDATE_URL="https://api.github.com/repos/your-username/dev-mgmt-tools/releases/latest"

# Enable or disable automatic device detection on script start (true/false)
# 启用或禁用脚本启动时的自动设备检测（true/false）
AUTO_DETECT_ON_START=false

# Device detection timeout on script start (in seconds)
# 脚本启动时设备检测的超时时间（秒）
AUTO_DETECT_TIMEOUT=30

# Enable or disable notification system (true/false)
# 启用或禁用通知系统（true/false）
ENABLE_NOTIFICATIONS=false

# Notification command (e.g., 'notify-send' for desktop notifications)
# 通知命令（例如，对于桌面通知使用 'notify-send'）
NOTIFICATION_COMMAND="notify-send"

# Custom device naming scheme
# Use {vendor}, {product}, {serial} as placeholders
# 自定义设备命名方案
# 使用 {vendor}、{product}、{serial} 作为占位符
CUSTOM_NAME_SCHEME="{vendor}_{product}"

# Enable or disable device type guessing based on properties (true/false)
# 启用或禁用基于属性的设备类型猜测（true/false）
GUESS_DEVICE_TYPE=false

# Path to the device type database file
# 设备类型数据库文件的路径
DEVICE_TYPE_DB="/usr/local/share/dev_alias_manager/device_types.db"